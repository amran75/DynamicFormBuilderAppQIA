<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dynamic Form Builder App QIA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DynamicFormBuilderAppQIA.styles.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom Styles -->
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .content-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        .app-footer {
            background: linear-gradient(135deg, #2b2d42 0%, #1d1e2c 100%);
            color: rgba(255, 255, 255, 0.8);
            padding: 25px 0;
            text-align: center;
        }

        .app-footer a {
            color: #4cc9f0;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .app-footer a:hover {
            color: #fff;
            text-decoration: underline;
        }

        select.form-control {
            appearance: auto;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="content-wrapper"> 
    <header class="mb-4 text-center">
        <h1 class="display-4 text-primary">
                Dynamic Form Builder For QIA  With API Integration
        </h1>
        <hr class="my-4">
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    </div>

    <!-- Footer Section -->
    <footer class="app-footer py-3 bg-light border-top mt-5">
        <div class="container text-center">
            <div class="mb-2">
                Md Amran Hossain | amranuiucse@gmail.com | 01676841400
            </div>
            <div class="text-white">
                <a href="https://github.com/amran75" class=" me-3" target="_blank">
                    <i class="fab fa-github fa-lg text-white"></i>
                </a>
                <a href="https://www.linkedin.com/in/amranhossain75/" class="me-3" target="_blank">
                    <i class="fab fa-linkedin fa-lg text-white"></i>
                </a>
                <a href="https://medium.com/@@amran27" class="" target="_blank">
                    <i class="fab fa-medium fa-lg text-white"></i>
                </a>
                <a href="https://sites.google.com/view/amranhossain/home" class="text-white me-3" target="_blank">
                    <i class="fas fa-globe fa-lg"></i>
                </a>
            </div>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Validation Scripts -->
    <partial name="_ValidationScriptsPartial" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
