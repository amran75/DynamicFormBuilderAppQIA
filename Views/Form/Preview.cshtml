@model DynamicFormBuilderAppQIA.Models.FormModel

@{
    ViewData["Title"] = "Preview: " + Model.Title;
}

<div class="container mt-4">
    <div class="card border-primary">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title">@Model.Title</h3>
        </div>
        <div class="card-body">
            <form>
                @foreach (var field in Model.Fields)
                {
                    <div class="form-group mb-4">
                        <label class="d-block mb-1">
                            @if (field.IsRequired)
                            {
                                <span class="text-danger font-weight-bold">*</span>
                            }
                            @field.Label
                        </label>

                        <select class="form-control">
                          @*   <option>Select an Item</option> *@
                            @foreach (var option in field.Options.Split(','))
                            {
                               @*  <option>@option</option> *@
                                <option value="@option" selected="@(option == field.SelectedOption)">@option</option>
                            }
                        </select>

                        @if (field.IsRequired)
                        {
                            <small class="form-text text-danger">
                                <i class="fas fa-asterisk"></i> This field is required
                            </small>
                        }
                    </div>
                }
            </form>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>