@model IEnumerable<DynamicFormBuilderAppQIA.Models.FormModel>

@{
    ViewData["Title"] = "History";
}

<div class="container mt-4">
    <h2 class="mb-4">History</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No forms have been created yet. <a asp-action="Create">Create your first form</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Form Title</th>
                   @*      <th>Created Date</th> *@
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var form in Model)
                    {
                        <tr>
                            <td>@form.Title</td> 
                            <td class="text-center">
                                <a asp-action="Preview" asp-route-id="@form.Id"
                                   class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Preview
                                </a>
                            </td>
                          @*   <td>@form.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td> *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Form
        </a>
    </div>
</div>